<script>
    $(document).ready(function () {

        /* Centering the modal vertically */
        function alignModal() {
            var modalDialog = $(this).find(".modal-dialog");
            modalDialog.css("margin-top", Math.max(0,
                ($(window).height() - modalDialog.height()) / 2));
        }

        /* Launching on trigger */
        $(".modal").on("shown.bs.modal", alignModal);

        /* Resizing the modal according the screen size */
        $(window).on("resize", function () {
            $(".modal:visible").each(alignModal);
        });


    });
</script>


<script>
    function responsiveHeader() {
        var x = document.getElementById("myLinks");
        if (x.style.display === "block") {
            x.style.display = "none";
        } else {
            x.style.display = "block";
        }
    }

    /**
     * Function to open close language dropdown in mobile
     * */
    function openLangDropDown() {
        let dropDown = $('#uh-lang-drop')
        if (dropDown.hasClass('uh-no-display')) dropDown.removeClass('uh-no-display')
        else dropDown.addClass('uh-no-display')
    }
</script>

<script type="text/javascript">
    function isIE() {
        var ua = window.navigator.userAgent;

        var msie = ua.indexOf('MSIE ');
        if (msie > 0) {
            return parseInt(ua.substring(msie + 5, ua.indexOf('.', msie)), 10);
        }

        var trident = ua.indexOf('Trident/');
        if (trident > 0) {
            var rv = ua.indexOf('rv:');
            return parseInt(ua.substring(rv + 3, ua.indexOf('.', rv)), 10);
        }

        var edge = ua.indexOf('Edge/');
        if (edge > 0) {
            return parseInt(ua.substring(edge + 5, ua.indexOf('.', edge)), 10);
        }

        return false;
    }
</script>

<script type="text/javascript">
    $('#myCarousel').carousel({
        interval: false,
    });

    $('.carousel .item').each(function () {
        var next = $(this).next();
        var minPerSlide = 2;
        if (!next.length) {
            next = $(this).siblings(':first');
        }
        next.children(':first-child').clone().appendTo($(this));
        for (var i = 0; i < minPerSlide; i++) {
            next = next.next();
            if (!next.length) {
                next = $(this).siblings(':first');
            }

            next.children(':first-child').clone().appendTo($(this));
        }
    });
</script>

