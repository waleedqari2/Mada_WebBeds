    <script type="text/javascript" src="https://www.uhitravel.com/_laravel/public/ci/js/Login_1750327177_.js"></script>
    <script type="text/javascript">
        $(function () {
            Login.init();
        });

        $(document).ready(function () {
            // If device width is 800 or less (Mobile case) removing the header sticky class
            if (window.innerWidth <= 800) $('#umrah-header-div').removeClass('sticky')

            $(document).on('click','#uo-span', function(){
                $("#uoform-div").toggle();
                $("#dropdown-arrow").toggleClass('dropdown-arrow');
            });

            var typingTimer;                //timer identifier
            var doneTypingInterval = 2000;  //time in ms (2 seconds)

            //on keyup, start the countdown
            $('#uouserID').keyup(function(){
                $("#uo-customer-activate").attr("disabled",true);
                $("#uo-password-field-container").hide();
                        $("#uo-customer-login").hide();
                        $("#uo-customer-activate").show();
                clearTimeout(typingTimer);
                if ($('#uouserID').val()) {
                    typingTimer = setTimeout(doneTyping, doneTypingInterval);
                }
            });

            //user is "finished typing," do something
            function doneTyping () {
                $('#uo-login-loader').show();
                var uouserID = $('#uouserID').val();
                
                var url = 'https://www.uhitravel.com/interface/en/checkMaqamUOActivated';
                var CSRF_TOKEN   = 'CRPw09IZmmtyWNmzKXOqRGJTmmAjNUUR9gylOgim';
                $.post(url, {_token: CSRF_TOKEN, uouserID: uouserID })
                .done(function (response) {
                    if(response.success)
                    {
                        $("#uo-password-field-container").show();
                        $("#uo-customer-login").show();
                        $("#uo-customer-activate").hide();

                    }
                    else
                    {
                        if(response.message == 'Not Activated')
                        {
                            $("#uo-customer-activate").attr("disabled",false);
                        }
                        else
                        {
                            $message = $('<div>', {'class': 'alert alert-danger'}).html('<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>'+response.message);
                            $('#uo-alert-div').show().empty().html($message).slideDown('fast').delay(10000).slideUp('slow');
                        }
                    }
                })
                .fail(function (jqXHR, textStatus, error) {
                    console.log(jqXHR);
                    console.log(error);
                    console.log(textStatus);
                    event.preventDefault();
                    event.stopPropagation();
                }).always(function() { $('#uo-login-loader').hide(); });
                
            }

            $(document).on('click','#uo-customer-activate', function(e){
                e.preventDefault();
                $('#uo-login-loader').show();
                $("#uo-customer-activate").attr("disabled",true);
                var uouserID = $('#uouserID').val();
                
                var url = 'https://www.uhitravel.com/interface/en/maqam-uo-reset-password';
                var CSRF_TOKEN   = 'CRPw09IZmmtyWNmzKXOqRGJTmmAjNUUR9gylOgim';
                $.post(url, {_token: CSRF_TOKEN, uouserID: uouserID })
                .done(function (response) {
                    $type =response.success ? 'success' : 'danger';
                    $message = $('<div>', {'class': 'alert alert-'+$type}).html('<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>'+response.message);
                    $('#uo-alert-div').show().empty().html($message).slideDown('fast').delay(10000).slideUp('slow');
                })
                .fail(function (jqXHR, textStatus, error) {
                    console.log(jqXHR);
                    console.log(error);
                    console.log(textStatus);
                    event.preventDefault();
                    event.stopPropagation();
                }).always(function() 
                { 
                    $('#uo-login-loader').hide();
                    $("#uo-customer-activate").attr("disabled",true);
                });
            });
            
        })

    </script>

